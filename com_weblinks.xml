<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="xmap" method="upgrade">
    <name>Xmap - Weblinks</name>
    <author>Branko Wilhelm</author>
    <creationDate>Sep 2013</creationDate>
    <copyright>Copyright (C) 2013 - 2014 Branko Wilhelm</copyright>
    <license>GNU/GPLv3 http://www.gnu.org/licenses/gpl-3.0.html</license>
    <authorEmail>branko.wilhelm@gmail.com</authorEmail>
    <authorUrl>www.z-index.net</authorUrl>
    <version>@REVISION@</version>
    <description>Add support for categories and links</description>
    <files>
        <filename plugin="com_weblinks">com_weblinks.php</filename>
    </files>
    <updateservers>
        <server type="collection" priority="1" name="z-index development">http://www.z-index.net/en/extensions.xml</server>
    </updateservers>
    <languages folder="lang">
        <language tag="en-GB">en-GB.plg_xmap_com_weblinks.ini</language>
    </languages>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="include_links" type="list" default="1" label="XMAP_SETTING_INCLUDE_LINKS_LABEL" description="XMAP_SETTING_INCLUDE_LINKS_DESC">
                    <option value="0">XMAP_OPTION_NEVER</option>
                    <option value="1">XMAP_OPTION_ALWAYS</option>
                    <option value="2">XMAP_OPTION_XML_ONLY</option>
                    <option value="3">XMAP_OPTION_HTML_ONLY</option>
                </field>
                <field name="show_unauth" type="list" default="0" label="XMAP_SETTING_SHOW_UNAUTH_LINKS_LABEL" description="XMAP_SETTING_SHOW_UNAUTH_LINKS_DESC">
                    <option value="0">XMAP_OPTION_NEVER</option>
                    <option value="1">XMAP_OPTION_ALWAYS</option>
                    <option value="2">XMAP_OPTION_XML_ONLY</option>
                    <option value="3">XMAP_OPTION_HTML_ONLY</option>
                </field>
                <field name="category_priority" type="list" default="-1" label="XMAP_SETTING_CATEGORY_PRIORITY_LABEL" description="XMAP_SETTING_CATEGORY_PRIORITY_DESC">
                    <option value="-1">XMAP_OPTION_USE_PARENT_MENU</option>
                    <option value="0.0">0.0</option>
                    <option value="0.1">0.1</option>
                    <option value="0.2">0.2</option>
                    <option value="0.3">0.3</option>
                    <option value="0.4">0.4</option>
                    <option value="0.5">0.5</option>
                    <option value="0.6">0.6</option>
                    <option value="0.7">0.7</option>
                    <option value="0.8">0.8</option>
                    <option value="0.9">0.9</option>
                    <option value="1">1</option>
                </field>
                <field name="category_changefreq" type="list" default="-1" label="XMAP_SETTING_CATEGORY_CHANGE_FREQ_LABEL" description="XMAP_SETTING_CATEGORY_CHANGE_FREQ_DESC">
                    <option value="-1">XMAP_OPTION_USE_PARENT_MENU</option>
                    <option value="always">XMAP_OPTION_ALWAYS</option>
                    <option value="hourly">XMAP_OPTION_HOURLY</option>
                    <option value="daily">XMAP_OPTION_DAILY</option>
                    <option value="weekly">XMAP_OPTION_WEEKLY</option>
                    <option value="monthly">XMAP_OPTION_MONTHLY</option>
                    <option value="yearly">XMAP_OPTION_YEARLY</option>
                    <option value="never">XMAP_OPTION_NEVER</option>
                </field>
                <field name="link_priority" type="list" default="-1" label="XMAP_SETTING_LINKS_PRIORITY_LABEL" description="XMAP_SETTING_LINKS_PRIORITY_DESC">
                    <option value="-1">XMAP_OPTION_USE_PARENT_MENU</option>
                    <option value="0.0">0.0</option>
                    <option value="0.1">0.1</option>
                    <option value="0.2">0.2</option>
                    <option value="0.3">0.3</option>
                    <option value="0.4">0.4</option>
                    <option value="0.5">0.5</option>
                    <option value="0.6">0.6</option>
                    <option value="0.7">0.7</option>
                    <option value="0.8">0.8</option>
                    <option value="0.9">0.9</option>
                    <option value="1">1</option>
                </field>
                <field name="link_changefreq" type="list" default="-1" label="XMAP_SETTING_LINKS_CHANGE_FREQ_LABEL" description="XMAP_SETTING_LINKS_CHANGE_FREQ_DESC">
                    <option value="-1">XMAP_OPTION_USE_PARENT_MENU</option>
                    <option value="always">XMAP_OPTION_ALWAYS</option>
                    <option value="hourly">XMAP_OPTION_HOURLY</option>
                    <option value="daily">XMAP_OPTION_DAILY</option>
                    <option value="weekly">XMAP_OPTION_WEEKLY</option>
                    <option value="monthly">XMAP_OPTION_MONTHLY</option>
                    <option value="yearly">XMAP_OPTION_YEARLY</option>
                    <option value="never">XMAP_OPTION_NEVER</option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>